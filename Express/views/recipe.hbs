
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">


<link href="../stylesheets/style.css" type="text/css" rel="stylesheet">
<link href="/stylesheets/bootstrap.min.css" rel="stylesheet">
<link type="text/css" rel="stylesheet" href="../stylesheets/hover-box.css">

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
<script src="../javascripts/bootstrap.min.js" type="text/javascript"></script>
<script src="../javascripts/recipeLogic.js" type="text/javascript"></script>

<header id="header">
    <div class="inner">
        <div class="logo"> <a href="/recipe">Recipe Finder</a></div>
        <nav id="nav">
            <a href="/recipe/logout">Logout</a>
        </nav>
    </div>
</header>

{{#if user}}
    <!-- Sidebar -->
    <div class="sidebar">
        <dl class="nav">
            <a href="inventory" id="myPantry">My Pantry</a>
            <dt class="Category">Dietary Preferences</dt>

            <dt class="Filters">
                <input type="checkbox" id="vegetarian" name="dietaryFilter" value="vegetarian">
                <label for="vegetarian">vegetarian</label>
            </dt>

            <dt class="Filters">
                <input type="checkbox" id="vegan" name="dietaryFilter" value="vegan">
                <label for="vegan">vegan</label>
            </dt>

            <dt class="Filters">
                <input type="checkbox" id="gluten" name="dietaryFilter" value="gluten">
                <label for="gluten">gluten free</label>
            </dt>

            <dt class="Category">Cuisine</dt>

            <dt class="Filters">
                <input type="checkbox" id="Mediterranean" name="cusineFilter" value="Mediterranean">
                <label for="Mediterranean">Mediterranean</label>
            </dt>

            <dt class="Filters">
                <input type="checkbox" id="Asian" name="cuisineFilter" value="Asian">
                <label for="Asian">Asian</label>
            </dt>

            <dt class="Filters">
                <input type="checkbox" id="Italian" name="cuisineFilter" value="Italian">
                <label for="Italian">Italian</label>
            </dt>

            <dt class="Category">Cook Time</dt>

            <dt class="Filters">
                <input type="checkbox" id="0-30" name="timeFilter" value="0-30">
                <label for="0-30">0 to 30 minutes</label>
            </dt>

            <dt class="Filters">
                <input type="checkbox" id="30-60" name="timeFilter" value="30-60">
                <label for="30-60">30 to 60 minutes</label>
            </dt>

            <dt class="Filters">
                <input type="checkbox" id="60-90" name="timeFilter" value="60-90">
                <label for="60-90">60 to 90 minutes</label>
            </dt>

            <dt class="Filters">
                <input type="checkbox" id="90+" name="timeFilter" value="90+">
                <label for="90+">90+ minutes</label>
            </dt>

        </dl>
    </div>

    <h4><a href="/recipe/pantry">Click here</a> to edit or view your pantry<h4>

        {{#if recipe}}
            <div class = "row">
                <div class="col-md-3 col-sm-4 col-xs-12 hvrbox">
                    <a href = "/recipe/{{recipe.id}}">
                        <img src={{recipe.imgURL}} class="fullimage img-thumbnail hvrbox-layer_bottom" /> 
                    <div class="hvrbox-layer_top hvrbox-layer_slideleft">
                        <div class="hvrbox-text">
                            <h4>{{recipe.name}}!</h4>
                            <h6> Ingredients: </h6>
                             {{recipe.ingredients}}
                            <h6> Steps: </h6>
                            {{recipe.directions}}
                        </div>
                    </div>
                    </a>
                </div>
            </div>
        {{/if}}


    <!--
    <ol>
        {{#each link as |link|}}
            <li> <a href={{link.url}}>{{link.title}}</a>
            <a href= {{link.slug}}> [Comments]</a>
            </li>
        {{/each}}
    </ol> -->


    <form action = "/recipe/home" method = "post">
        <input class="button" type="submit" name="Find a Recipe!" value="Find a Recipe!" />
    </form>


{{else}}
    <p>In order to find recipes, you need to have an account. Login or register below:</p>
    <p>
        <a href="register">
            Register
        </a>
        <br>
        <a href="login">
            Login
        </a>
    </p>
{{/if}}
