  <div id="update" class="modal">
    <div class="modal-content">
      <form method="POST" action="/recipe/inventory/update">
      <p>How much do you have?</p>
      <div>
          <div class="input-field col s12" name="ingredient" value="Milk">
            <select>
              <option value="1 gallon" selected>1 gallon</option>
              <option value="1/2 gallon">1/2 gallon</option>
              <option value="1 quart">1 quart</option>
              <option value="1 pint">1 pint</option>
            </select>
            <label>Milk</label>
          </div>

          <div class="input-field col" name="ingredient" value="Cream">
            <select>
              <option value="1 pint" selected>1 pint</option>
              <option value="1 quart">1 quart</option>
              <option value="1 cups">1 cup</option>
              <option value="2 cups">2 cups</option>
