        <button type="submit" class="btn modal-action modal-close waves-green">Save Pantry</button>
      </div>
      <!--<a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">Agree</a>-->
    </div>
  </div>

  <!-- <a class="waves-effect waves-light btn modal-trigger" href="#modal3">Throw out Ingredients</a> -->

  <div id="remove" class="modal">
    <div class="modal-content">
      <form method="POST" action="/recipe/inventory/delete">
        <div class = "fridge">
            <h5> Fridge: </h5>
            <input type = "search" id="ingredient-input" placeholder="Search for ingredients.." title = "Type an ingredient">
              {{#each  pantry}}
                <label class = "ingredients-to-pick">
                  <input type="checkbox" class="filled-in" name="ingredient" value="{{name}}"/>
                  <span>{{name}}</span>
                </label><br>
              {{/each}}
            </div>
            <div>
              <a href = "/recipe/inventory"class="btn modal-action modal-close waves-green">Back</a>
              <button type="submit" class="btn modal-action modal-close waves-green" id="remove">Remove</button>
            </div>
      </form>
    </div>
  </div>

 {{else}}
  <h2> Your Pantry is Empty</h2>
  <a href="/recipe/pantry">
        SET UP YOUR PANTRY HERE!
  </a>
{{/if}}

